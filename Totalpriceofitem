import java.util.Scanner; // Import Scanner class to take user input

class Totalpriceofitem {
   public static void main(String[] args) {
       Scanner input = new Scanner(System.in); // Creating Scanner object for user input
  
       System.out.println("Enter item price:"); // Prompting user to enter item price 
       double price = input.nextDouble(); // Reading item price from user
	   
	   System.out.println("Enter item quantity:"); // Prompting user to enter item quantity
       double quantity = input.nextDouble(); // Reading item quantity from user
	   
	   // Calculating total price using formula: total price = price * quantity
	   double totalprice = price * quantity;
	 
       // Displaying the calculated total price
       System.out.println("The total purchase price is INR " + totalprice + 
                          " if the quantity is " + quantity + " and unit price is INR " + price);

       input.close(); // Closing the Scanner object to prevent resource leaks
	}
}
