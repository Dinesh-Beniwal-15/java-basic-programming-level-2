import java.util.Scanner; // Import Scanner class to take user input

class Quotientandremainder {
   public static void main(String[] args) {
       Scanner input = new Scanner(System.in); // Creating Scanner object for user input

       System.out.println("Enter first number:"); // Prompting user to enter first number  
       double number1 = input.nextDouble(); // Reading first number from user
	   
	   System.out.println("Enter second number:"); // Prompting user to enter second number  
       double number2 = input.nextDouble(); // Reading second number from user
	   
	   // Calculating remainder using modulus operator (%)
	   double remainder = number1 % number2;
	   
	   // Calculating quotient using division operator (/)
	   double quotient = number1 / number2;
	 
       // Displaying the calculated quotient and remainder
       System.out.println("The Quotient is " + quotient + " and Remainder is " + remainder + 
                          " for the numbers " + number1 + " and " + number2);

       input.close(); // Closing the Scanner object to prevent resource leaks
	}
}
