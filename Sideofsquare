import java.util.Scanner; // Import Scanner class to take user input
 
class Sideofsquare {
   public static void main(String[] args) {
       Scanner input = new Scanner(System.in); // Creating Scanner object for user input
 
       System.out.println("Enter perimeter of square:"); // Prompting user to enter perimeter
       double perimeter = input.nextDouble(); // Reading perimeter value from user 

       // Calculating the side length of the square using the formula: side = perimeter / 4
       double sideofsquare = perimeter / 4.0; 

       // Displaying the calculated side length along with the given perimeter 
       System.out.println("The length of the side is " + sideofsquare + " whose perimeter is " + perimeter);

       input.close(); // Closing the Scanner object to prevent resource leaks
   }
}
