import java.util.Scanner; // Importing Scanner class to take user input

class Calculator {
   public static void main(String[] args) {
       Scanner input = new Scanner(System.in); // Creating Scanner object for user input
   
       // Asking the user to enter the first number 
       System.out.println("Enter first number:");  
       double variable1 = input.nextDouble(); // Storing the first number

       // Asking the user to enter the second number
       System.out.println("Enter second number:"); 
       double variable2 = input.nextDouble(); // Storing the second number

       // Performing basic arithmetic operations
       double addition = variable1 + variable2; // Addition
       double subtraction = variable1 - variable2; // Subtraction
       double multiplication = variable1 * variable2; // Multiplication
       double division = variable1 / variable2; // Division

       // Displaying the results of all operations
       System.out.println("The addition, subtraction, multiplication and division value of 2 numbers "
               + variable1 + " and " + variable2 + " is " + addition + "," + subtraction + "," 
               + multiplication + ", and " + division);

       input.close(); // Closing the Scanner object to prevent resource leaks
   }
}
